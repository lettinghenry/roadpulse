# RoadPulse Web Application Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Map Configuration
VITE_DEFAULT_MAP_CENTER_LAT=40.7128
VITE_DEFAULT_MAP_CENTER_LNG=-74.0060
VITE_DEFAULT_MAP_ZOOM=12
VITE_MAP_TILE_SERVER=https://tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_SATELLITE_TILE_SERVER=https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}

# Performance Configuration
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1
VITE_MAX_VISIBLE_MARKERS=1000
VITE_CLUSTER_RADIUS=60
VITE_HEAT_MAP_RADIUS=25

# Cache Configuration
VITE_CACHE_DURATION=600000
VITE_MAX_CACHE_SIZE=52428800
VITE_OFFLINE_DATA_TTL=604800000

# Feature Flags
VITE_ENABLE_CLUSTERING=true
VITE_ENABLE_HEAT_MAP=true
VITE_ENABLE_FILTERING=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ACCESSIBILITY_FEATURES=true
VITE_ENABLE_PERFORMANCE_OPTIMIZATIONS=true

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ENDPOINT=
VITE_ERROR_REPORTING_ENDPOINT=
VITE_PERFORMANCE_REPORTING_ENDPOINT=

# Development Configuration
VITE_ENABLE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_MONITOR=false
VITE_MOCK_API_RESPONSES=false
VITE_LOG_LEVEL=info

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_API_KEY=

# Deployment Configuration
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIMESTAMP=
VITE_DEPLOYMENT_ENVIRONMENT=development